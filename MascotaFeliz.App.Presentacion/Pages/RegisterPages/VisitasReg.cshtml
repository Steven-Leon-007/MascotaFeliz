@page
@model MascotaFeliz.App.Presentacion.Pages.ListModel
@{
    Layout = null;
    ViewData["Title"] = "Historial de Visitas";
}

<head>
    <link rel="stylesheet" href="~/css/listStyle.css" />
    <title>Historial de Visitas</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <a id="nav_header_logo" asp-page="/RegisterPages/vetView"><img src="/lib/logoMascFeliz.png"
                alt="Logo Mascota Feliz" />
        </a>
        <a id="nav_header_text" asp-page="/RegisterPages/vetView">
            <h1>Mascota Feliz</h1>
        </a>

        <nav>
            <a id="nav_header_visit" asp-page="/RegisterPages/visitRegister">Registro Visitas</a>
            <a id="nav_header_petregister" href="/html/PetRegister.html">Registro de Mascotas</a>
            <a id="nav_header_profile" href="#">Perfil</a>
            <link rel="icon" href="icoMascFeliz.ico" />
        </nav>
    </header>


    <main>
        <h2>Visitas:</h2>
        <table class="table">
            <tr>
                <th>PET NOMBRE</th>
                <th>VETERINARIO</th>
                <th>FECHA</th>
                <th>TEMPERATURA</th>
                <th>PESO</th>
                <th>FRECUENCIA RESPIRATORIA</th>
                <th>FRECUENCIA CARDIACA</th>
                <th>ESTADO DE ÁNIMO</th>
                <th>RECOMENDACIONES</th>
            </tr>
            @foreach (var visita in Model.Visitas)
            {
                <tr>
                    <td>@visita.Mascota.NombreMascota</td>
                    <td>@visita.Veterinario.Nombre</td>
                    <td>@visita.Fecha</td>
                    <td>@visita.Temperatura °C</td>
                    <td>@visita.Peso Kg</td>
                    <td>@visita.FrecuenciaRespiratoria x Minuto</td>
                    <td>@visita.FrecuenciaCardiaca x Minuto</td>
                    <td>@visita.EstadoDeAnimo</td>
                    <td>@visita.Recomendaciones</td>
                    <td>
                        <a class="btn btn-primary table-btn" asp-page="./DetailsVisita" asp-route-visitaId="@visita.Id">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary table-btn" asp-page="./EditVisita" asp-route-visitaId="@visita.Id">
                            <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
        <a asp-page=".\EditVisita" class="btn btn-primary">Adicionar Visita</a>


        <footer>
            <article>
                <p><i>© 2021 - Designed and Developed by InMotion</i></p>
            </article>
        </footer>

    </main>

</body>
