@page
@model MascotaFeliz.App.Presentacion.Pages.ListModel
@{
    Layout = null;
    ViewData["Title"] = "Registro de Mascotas";
}

<head>
    <link rel="stylesheet" href="~/css/listStyle.css" />
    <title>Registro de Visitas</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <a id="nav_header_logo" asp-page="/RegisterPages/vetView"><img src="/lib/logoMascFeliz.png"
                alt="Logo Mascota Feliz" />
        </a>
        <a id="nav_header_text" asp-page="/RegisterPages/vetView">
            <h1>Mascota Feliz</h1>
        </a>

        <nav>
            <a id="nav_header_visit" asp-page="/RegisterPages/visitRegister">Registro Visitas</a>
            <a id="nav_header_petregister" href="/html/PetRegister.html">Registro de Mascotas</a>
            <a id="nav_header_profile" href="#">Perfil</a>
            <link rel="icon" href="icoMascFeliz.ico" />
        </nav>
    </header>


    <main>
    <h2>Mascotas:</h2>
    <table class="table">
        <tr>
            <th>PET NOMBRE</th>
            <th>RAZA</th>
            <th>TIPO DE ANIMAL</th>
            <th>DUEÑO</th>
        </tr>
        @foreach (var mascota in Model.Mascotas)
        {
            <tr>
                <td>@mascota.NombreMascota</td>
                <td>@mascota.Raza</td>
                <td>@mascota.TipoAnimal</td>
                <td>@mascota.Propietario.Nombre</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./DetailsMascota" asp-route-mascotaId="@mascota.Id">
                    <i class="fas fa-info-circle"></i>
                    </a>
                </td> 
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./EditMascota" asp-route-mascotaId="@mascota.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
                </td>
            </tr>
        }
    </table>
    <a asp-page=".\EditMascota" class="btn btn-primary">Adicionar Mascota</a>

    </main>

    <footer>
        <article>
            <p><i>© 2021 - Designed and Developed by InMotion</i></p>
        </article>
    </footer>


</body>